# Database Configuration
MONGODB_URI=mongodb://localhost:27017/erp_inventory
MONGODB_URI_TEST=mongodb://localhost:27017/erp_inventory_test

# Server Configuration
PORT=8002
NODE_ENV=development

# JWT Configuration (should match auth service)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=1h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Log Level
LOG_LEVEL=debug

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DEST=./uploads

# Notification Configuration
EMAIL_SERVICE_URL=http://localhost:8005
NOTIFICATION_SERVICE_URL=http://localhost:8005

# External Service URLs
AUTH_SERVICE_URL=http://localhost:8001
ORDER_SERVICE_URL=http://localhost:8003
FINANCE_SERVICE_URL=http://localhost:8004

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Pagination Configuration
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100
