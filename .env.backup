# ============================================
# ERP System - Environment Configuration
# ============================================
# Copy this file to .env and configure with your values
# For detailed explanation, see INSTALLATION.md
# ============================================

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application name (shown in UI)
APP_NAME="ERP System"

# Environment: development, staging, production
APP_ENV=production

# Debug mode (true for development, false for production)
APP_DEBUG=false

# Application version
APP_VERSION=1.0.0

# ============================================
# MONGODB DATABASE
# ============================================

# MongoDB root username
MONGO_INITDB_ROOT_USERNAME=admin

# MongoDB root password (CHANGE THIS!)
# Generate secure password: python3 -c "import secrets; print(secrets.token_urlsafe(16))"
MONGO_INITDB_ROOT_PASSWORD=cMEPMlMQL1-xXT2tcLhYr5whKZpbbqzE

# MongoDB host (use 'mongodb' for Docker, 'localhost' for local)
MONGO_HOST=mongodb

# MongoDB port
MONGO_PORT=27017

# Database name
MONGO_DATABASE=erp_db

# MongoDB connection string (auto-constructed, no need to change)
MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DATABASE}?authSource=admin

# ============================================
# REDIS CACHE
# ============================================

# Redis host (use 'redis' for Docker, 'localhost' for local)
REDIS_HOST=redis

# Redis port
REDIS_PORT=6379

# Redis password (CHANGE THIS!)
# Generate secure password: python3 -c "import secrets; print(secrets.token_urlsafe(16))"
REDIS_PASSWORD=5AzB1NlNaEVGiWrKKyt7WyPK01lLJdUp

# Redis database number
REDIS_DB=0

# ============================================
# AUTH SERVICE (PORT 8001)
# ============================================

# Service port
AUTH_SERVICE_PORT=8001

# JWT Secret Key (CHANGE THIS! - Generate new one!)
# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=eatD03y0opH0vvEUdIS0RqOXmodGw0ENUN6nF5u90_wc4WgFEB6UW0PZ1NjI3m96oe9iL2w4oUbnQk7aWbYAbw

# JWT Algorithm
JWT_ALGORITHM=HS256

# Access token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration (in days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12

# ============================================
# INVENTORY SERVICE (PORT 8002)
# ============================================

# Service port
INVENTORY_SERVICE_PORT=8002

# MongoDB connection for inventory service
INVENTORY_MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/erp_inventory?authSource=admin

# ============================================
# SALES SERVICE (PORT 8003)
# ============================================

# Service port
SALES_SERVICE_PORT=8003

# MongoDB connection for sales service
SALES_MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/erp_sales?authSource=admin

# ============================================
# FRONTEND
# ============================================

# Frontend port
FRONTEND_PORT=5173

# API URLs (for frontend to connect to backend services)
VITE_AUTH_SERVICE_URL=http://localhost:8001
VITE_INVENTORY_SERVICE_URL=http://localhost:8002
VITE_SALES_SERVICE_URL=http://localhost:8003

# API timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# ============================================
# STRIPE PAYMENT GATEWAY
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys

# Stripe Publishable Key (starts with pk_test_ or pk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Secret Key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe API Version
STRIPE_API_VERSION=2023-10-16

# ============================================
# EMAIL/SMTP CONFIGURATION
# ============================================
# For sending email notifications (optional but recommended)

# Enable email notifications
ENABLE_EMAIL=false

# SMTP server host
SMTP_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username (usually your email)
SMTP_USER=your-email@gmail.com

# SMTP password (use app-specific password for Gmail)
# Gmail: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-specific-password

# Email sender address
SMTP_FROM=noreply@yourdomain.com

# Email sender name
SMTP_FROM_NAME="ERP System"

# Use TLS (true for port 587, false for port 465)
SMTP_USE_TLS=true

# Use SSL
SMTP_USE_SSL=false

# ============================================
# SECURITY SETTINGS
# ============================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration (in minutes)
LOCKOUT_DURATION_MINUTES=30

# Session timeout (in minutes)
SESSION_TIMEOUT_MINUTES=60

# Enable HTTPS redirect (set to true in production)
FORCE_HTTPS=false

# ============================================
# PASSWORD POLICY
# ============================================

# Minimum password length
PASSWORD_MIN_LENGTH=8

# Require uppercase letters
PASSWORD_REQUIRE_UPPERCASE=true

# Require lowercase letters
PASSWORD_REQUIRE_LOWERCASE=true

# Require numbers
PASSWORD_REQUIRE_NUMBERS=true

# Require special characters
PASSWORD_REQUIRE_SPECIAL=true

# Password expiry (in days, 0 = never expires)
PASSWORD_EXPIRY_DAYS=90

# ============================================
# FILE UPLOAD SETTINGS
# ============================================

# Maximum file size (in MB)
MAX_FILE_SIZE_MB=10

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Upload directory
UPLOAD_DIR=uploads

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/app.log

# Max log file size (in MB)
LOG_MAX_SIZE_MB=100

# Number of log files to keep
LOG_BACKUP_COUNT=10

# ============================================
# DEMO DATA
# ============================================

# Load demo data on first run (true for testing, false for production)
LOAD_DEMO_DATA=true

# Number of demo users to create
DEMO_USERS_COUNT=10

# Number of demo products to create
DEMO_PRODUCTS_COUNT=50

# Number of demo orders to create
DEMO_ORDERS_COUNT=30

# ============================================
# BACKUP SETTINGS
# ============================================

# Enable automatic backups
ENABLE_AUTO_BACKUP=false

# Backup frequency (in hours)
BACKUP_FREQUENCY_HOURS=24

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# Backup directory
BACKUP_DIR=backups

# ============================================
# NOTIFICATION SETTINGS
# ============================================

# Enable in-app notifications
ENABLE_IN_APP_NOTIFICATIONS=true

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Enable SMS notifications (requires SMS provider)
ENABLE_SMS_NOTIFICATIONS=false

# Low stock alert threshold
LOW_STOCK_THRESHOLD=10

# ============================================
# TIMEZONE & LOCALE
# ============================================

# Timezone (for timestamps and schedules)
TZ=America/New_York

# Locale (for formatting)
LOCALE=en_US

# Date format
DATE_FORMAT=YYYY-MM-DD

# Time format (12 or 24)
TIME_FORMAT=24

# Currency symbol
CURRENCY_SYMBOL=$

# Currency code
CURRENCY_CODE=USD

# ============================================
# END OF CONFIGURATION
# ============================================

