# Environment
ENVIRONMENT=development

# Database
MONGODB_URL=mongodb://admin:password123@mongodb:27017/erp_sales?authSource=admin
DATABASE_NAME=erp_sales

# Service Configuration
SERVICE_NAME=sales-service
SERVICE_PORT=8002
SERVICE_HOST=0.0.0.0

# External Services
AUTH_SERVICE_URL=http://auth-service:8001
INVENTORY_SERVICE_URL=http://inventory-service:8003

# JWT Settings (for auth verification)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256

# Redis Configuration
REDIS_URL=redis://redis:6379

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@erp-system.com

# Business Settings
DEFAULT_TAX_RATE=0.15
DEFAULT_DISCOUNT_LIMIT=0.20
DEFAULT_COMMISSION_RATE=0.05
DEFAULT_PAYMENT_TERMS=30

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_POOL_SIZE=20
CACHE_TTL=3600

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOWED_HOSTS=["*"]

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
